<div class="container">
    <div class ="row justify-content-center">
        <div class="col-10">
            <%= render partial: 'shared/errors', locals: { model: @category} %>

            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
                    
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control", placeholder: "Name for category"%>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>        
    </div>
    <div class ="row justify-content-center">
        <%= link_to 'Cancel and return to listing', categories_path, class: "text-info title-link" %>
    </div>
</div>